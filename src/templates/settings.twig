{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle( "ssplugin\\sstwitterfeed\\assetbundles\\SsTwitterFeed\\SsTwitterFeedAsset" ) %}

<p> Connect to a Twitter account click on button </p>
{% if craft.ssTwitterFeed.getUrl() != "Could not authenticate." %}
    <div class="sstweet_config">
        <a href="{{craft.ssTwitterFeed.getUrl()}}" target="" class="sstweet-get-token"> <i class="fa fa-twitter"></i> Connect to twitter and get access token </a>
    </div>
{% else %}
	<h4>Something Wrong.</h4>
{% endif %}

{{ forms.textField({
    label: 'Access token',        
    id: 'access_token',
    name: 'access_token',
    value: settings['access_token']})
}}

{{ forms.textField({
    label: 'Access token secret',    
    id: 'access_token_secret',
    name: 'access_token_secret',
    value: settings['access_token_secret']})
}}

